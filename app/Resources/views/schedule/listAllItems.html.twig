{% extends 'schedule/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <h3>Órarendi Elemek</h3>
    <div id="yellow-wrapper">
        <div class="list-group">
            {% for item in items %}
                <a href="{{ path('schedule_edit_item', {'id': item.id}) }}" class="list-group-item">
                    {{ item }}
                    <b>Létrehozva: <b>{{ item.created|date('Y-m-d H:i:s') }}</b></b>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}