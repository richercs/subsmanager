{% extends 'subscription/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <h3>Bérletek</h3>
    {% if break_event is defined %}
        <div id="white-wrapper">
            <b>Szünet Eleje:</b> {{ break_event.getStartDate|date('Y.m.d. H:i:s') }}<br>
            <b>Szünet Vége:</b> {{ break_event.getDueDate|date('Y.m.d. H:i:s') }}<br>
            <b>Szünet ID:</b> {{ break_event.getId }}<br>
            <br>
        </div>
    {% endif %}
    <div id="yellow-wrapper">
        {% if break_event is defined %}
            <h4><b>Érintett Bérletek</b></h4>
            <br>
        {% endif %}
        <div class="list-group">
            {% for subscription in subscriptions %}
                {% if break_event_id is defined %}
                    <a href="{{ path('subscription_edit_subscription', {'id': subscription.id, 'break_event_id': break_event_id}) }}" class="list-group-item">
                        {{ subscription }}
                        <p>Létrehozvaaa: <b>{{ subscription.created|date('Y.m.d. H:i:s') }}</b></p>
                    </a>
                {% else %}
                    <a href="{{ path('subscription_edit_subscription', {'id': subscription.id}) }}" class="list-group-item">
                        {{ subscription }}
                        <p>Létrehozva: <b>{{ subscription.created|date('Y.m.d. H:i:s') }}</b></p>
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        {% if break_event_id is defined %}
            <a href="{{ path('break_edit_break_event', {'id': break_event_id}) }}" class="btn btn-primary">Vissza</a>
        {% else %}
            <a href="{{ path('homepage') }}" class="btn btn-primary">Vissza</a>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}