{% extends 'users/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <h3>Felhasználó Adatainak Megtekintése</h3>
    <div id="yellow-wrapper">
        <div id="view-user-account-wrapper">
            <b>Keresztnév: </b>{{ user_account.getFirstName }}<br/>
            <b>Vezetéknév: </b>{{ user_account.getLastName }}<br/>
            <b>Email: </b>{{ user_account.getEmail }}<br/>
            {% block AdminLinkToEditUserAccount %}
                {% if logged_in_user is not null %}
                    {% if logged_in_user.getIsAdmin %}
                        <br>
                        <a href="{{ path('useraccount_edit_user', {'id': user_account.getId}) }}" class="btn btn-default"><span style="font-size:16px; padding-left: 8px; padding-top: 2px;" class="pull-right showopacity glyphicon glyphicon-cog"></span>Szerkesztés</a>
                        <br>
                    {% endif %}
                {% endif %}
            {%  endblock %}
            <br>
            <h4><b>Bérletek</b></h4>
            <table class="table colored-table">
                <thead>
                <tr>
                    <th>Tulajdonos</th>
                    <th>Alkalmak</th>
                    <th>Indul</th>
                    <th>Ár</th>
                    <th>Részletek</th>
                </tr>
                </thead>
                <tbody>
                    {% for subscription in subscriptions %}
                        <tr>
                            <td>
                                {{ subscription.owner.getFirstName }} {{ subscription.owner.getLastName }}
                            </td>
                            <td>
                                {{ subscription.attendanceCount }}
                            </td>
                            <td>
                                {{ subscription.getStartDateString }}
                            </td>
                            <td>
                                {{ subscription.price }}
                            </td>
                            <td>
                                <a href="{{ path('subscription_view_attendances', {'id': subscription.id}) }}" class="btn btn-default"><span style="font-size:16px; padding-left: 8px;" class="pull-right showopacity glyphicon glyphicon-chevron-right"></span></a>
                                {% block AdminLinkToEditSubscription %}
                                    {% if logged_in_user is not null %}
                                        {% if logged_in_user.getIsAdmin %}
                                            <a href="{{ path('subscription_edit_subscription', {'id': subscription.getId, 'user_account_id': user_account.getId}) }}" class="btn btn-link"><span style="font-size:16px; padding-left: 8px;" class="pull-right showopacity glyphicon glyphicon-cog"></span></a>
                                        {% endif %}
                                    {% endif %}
                                {%  endblock %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}